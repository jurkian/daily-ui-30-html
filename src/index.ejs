<!DOCTYPE html>
<html lang="en">

<head>
   <meta charset="UTF-8">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <meta http-equiv="X-UA-Compatible" content="ie=edge">
   <title>
      <%= htmlWebpackPlugin.options.title %>
   </title>

   <!-- Fonts -->
   <link href="https://fonts.googleapis.com/css?family=Montserrat:400,400i,700,700i&amp;subset=latin-ext" rel="stylesheet">

   <!-- Icons -->
   <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
</head>

<body>
   <div class="container">

      <!-- Home module -->
      <div class="row">
         <div class="col-xs-12">
            <section class="home module">
               <header class="home-header">
                  <h1>Welcome to react-bank</h1>
               </header>
      
               <section class="home-features">
                  <div class="home-image">
                     <img src="https://placehold.it/400x300" class="img-responsive" alt="Home image">
                  </div>

                  <section class="home-text">
                     <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Saepe, sequi.</p>
                     <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Saepe, sequi.</p>
                     <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Saepe, sequi.</p>
         
                     <div class="home-cta">
                        <a href="#" class="btn btn-primary btn-lg">Log in now</a>
                     </div>
                  </section>
               </section>
            </section>
         </div>
      </div>

      <!-- Login module -->
      <div class="row">
         <div class="col-xs-12">
            <section class="login module">
               <section class="login-icon">
                  <div class="icon-container">
                     <img src="<%= require('./img/login-icon.png') %>" class="img-responsive" alt="Login icon">
                  </div>
               </section>
      
               <form class="login-form" method="post">
                  <div class="form-group">
                     <input type="text" class="form-control login-input" placeholder="Login">
                  </div>
                  <div class="form-group">
                     <input type="password" class="form-control password-input" placeholder="Password">
                  </div>
                  <div class="checkbox">
                     <label>
                        <input type="checkbox"> Keep me signed in
                     </label>
                  </div>
               </form>

               <div class="module-single-btn">
                  <button type="submit" class="btn btn-primary">Submit</button>
               </div>
            </section>
         </div>
      </div>

      <!-- User profile module -->
      <div class="row">
         <div class="col-xs-12">
            <section class="profile module">
               <header class="profile-header">
                  <h3>John Doe</h3>
                  <p>Registered on 31/08/2017</p>
                  <img src="https://placehold.it/200x200" alt="John Doe profile image">
               </header>
      
               <section class="profile-stats">
                  <div class="stats-green">
                     <strong>2</strong>
                     <span>Accounts</span>
                  </div>
                  <div class="stats-blue">
                     <strong>288.37</strong>
                     <span>Balance</span>
                  </div>
                  <div class="stats-red">
                     <strong>7</strong>
                     <span>Messages</span>
                  </div>
               </section>
      
               <section class="profile-links">
                  <a href="#">
                     <i class="ion-images"></i>
                     <span>Link 1</span>
                  </a>
                  <a href="#">
                     <i class="ion-card"></i>
                     <span>Link 2</span>
                  </a>
                  <a href="#">
                     <i class="ion-android-checkbox-outline"></i>
                     <span>Link 3</span>
                  </a>
               </section>
            </section>
         </div>
      </div>

      <!-- Iconed list -->
      <section class="row iconed-list module">
         <ul>
            <li>
               <a href="#">
                  <span class="list-title"><strong>John Doe</strong> added new image</span>
                  <span class="list-subtitle">34 minutes ago</span>
               </a>
            </li>
            <li>
               <a href="#">
                  <span class="list-title"><strong>John Doe</strong> added new image</span>
                  <span class="list-subtitle">34 minutes ago</span>
               </a>
            </li>
            <li class="list-type-image">
               <div>
                  <span class="list-title"><strong>John Doe</strong> added new image</span>
                  <span class="list-subtitle">34 minutes ago</span>
               </div>
            </li>
            <li class="list-type-comment">
               <div>
                  <span class="list-title"><strong>John Doe</strong> added new image</span>
                  <span class="list-subtitle">34 minutes ago</span>
               </div>
            </li>
            <li class="list-type-comment">
               <div>
                  <span class="list-title"><strong>John Doe</strong> added new image</span>
                  <span class="list-subtitle">34 minutes ago</span>
               </div>
            </li>
         </ul>
      </section>

      <!-- Account infobox module -->
      <div class="row">
         <div class="col-xs-12">
            <section class="account-infobox module">
               <header>
                  <div class="card-company-info">
                     <img src="<%= require('./img/card-chip.png') %>" alt="Credit card chip">
                     <img src="<%= require('./img/visa-logo.png') %>" alt="VISA logo">
                  </div>
      
                  <div class="card-details">
                     <div class="card-details-row">
                        <div>
                           <span>Card number</span>
                           <p class="big">4866-1209-0092-8832</p>
                        </div>
                     </div>
      
                     <div class="card-details-row card-details-row-1-2">
                        <div>
                           <span>Card holder</span>
                           <p>John Doe</p>
                        </div>
                        <div>
                           <span>Expiration date</span>
                           <p>January 2022</p>
                        </div>
                     </div>
      
                  </div>
               </header>
      
               <section class="account-name">
                  <h3>Classic account</h3>
                  <span>Summary for last 7 days</span>
               </section>
      
               <section class="account-summary-boxes">
                  <div>
                     <span>Income</span>
                     <strong>&pound; 33.49</strong>
                  </div>
                  <div>
                     <span>Expenses</span>
                     <strong>&pound; 17.64</strong>
                  </div>
               </section>
      
               <section class="account-summary-total">
                  <span>Total</span>
                  <strong>&pound; 885.34</strong>
               </section>
            </section>
         </div>
      </div>


      <!-- Message module -->
      <section class="row message module">
         <header class="message-header">
            <h3>Make logo smaller, trust me!</h3>

            <div class="message-sender-info">
               <img src="https://placehold.it/82x82" alt="Sender profile photo">
               <div>
                  <span>Johny Depp, johnyd@symu.co</span>
                  <strong>to jakub.jurkian@example.com</strong>
               </div>
            </div>
         </header>

         <article>
            <p>Lorem ipsum dolor sit, amet consectetur adipisicing elit. Debitis, laboriosam.</p>
            <p>Qui porro voluptatibus nisi tempore nam deleniti quo. Porro, nulla.</p>
         </article>

         <section class="double-buttons">
            <a href="#" class="btn btn-primary">Cancel</a>
            <a href="#" class="btn btn-primary">Reply</a>
         </section>
      </section>

      <!-- Navigation module -->
      <section class="row navigation module">
         <header class="navigation-header">
            <div class="user-profile-box">
               <a href="#">
                  <img src="https://placehold.it/60x60">
                  <span>John Laboune</span>
               </a>
            </div>

            <ul class="navigation-header-links">
               <li><a href="#">Logout</a></li>
            </ul>
         </header>

         <nav>
            <ul>
               <li class="active">
                  <a href="#">
                     <div class="main-nav-widget">
                        <div class="main-nav-box">
                           <i class="ion-home"></i>
                        </div>
                        <span>Home</span>
                     </div>
                  </a>
               </li>
               <li>
                  <a href="#">
                     <div class="main-nav-widget">
                        <div class="main-nav-box">
                           <i class="ion-clipboard"></i>
                        </div>
                        <span>Accounts</span>
                     </div>
                  </a>
               </li>
               <li>
                  <a href="#">
                     <div class="main-nav-widget">
                        <div class="main-nav-box">
                           <i class="ion-arrow-swap"></i>
                        </div>
                        <span>Transactions</span>
                     </div>
                  </a>
               </li>
               <li>
                  <a href="#">
                     <div class="main-nav-widget">
                        <div class="main-nav-box">
                           <i class="ion-card"></i>
                        </div>
                        <span>Cards</span>
                     </div>
                  </a>
               </li>
               <li>
                  <a href="#">
                     <div class="main-nav-widget">
                        <div class="main-nav-box">
                           <i class="ion-chatbox-working"></i>
                        </div>
                        <span>Messages</span>
                     </div>
                  </a>
               </li>
               <li>
                  <a href="#">
                     <div class="main-nav-widget">
                        <div class="main-nav-box">
                           <i class="ion-person"></i>
                        </div>
                        <span>Profile</span>
                     </div>
                  </a>
               </li>
               <li>
                  <a href="#">
                     <div class="main-nav-widget">
                        <div class="main-nav-box">
                           <i class="ion-help"></i>
                        </div>
                        <span>Help</span>
                     </div>
                  </a>
               </li>
            </ul>
         </nav>
      </section>
   </div>
</body>

</html>